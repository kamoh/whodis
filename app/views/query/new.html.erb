<div class="container search-bar">
  <%= form_tag('/search', method: 'get', id: 'search-bar') do %>
    <%= text_field_tag(:q, params['q'], placeholder: '9145405649') %>
    <p>
    <%= submit_tag('whodis') %>
    <p>
    <div id='results'>
      <% if @result != '' %>
        <%= @result %>
      <% end %>
    </div>
  <% end %>
</div>

<style type="text/css">
  #search-bar {
    text-align: center;
    margin-top: 10%;
  }
  input {
    margin-top: 3%;
    font-size: 2.5em;
  }
  #results {
    margin-top: 3%;
    font-size: 2.5em;
  }
</style>
